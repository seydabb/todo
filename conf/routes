
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

#TodoController endpoints
POST    /create                     controllers.TodoController.createTodo
PATCH   /edit/:id                   controllers.TodoController.editTodo(id: String)
DELETE  /delete/:id                 controllers.TodoController.deleteTodo(id: String)

#CommentController endpoints
POST    /addComment/:todoId         controllers.CommentController.addComment(todoId: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

